<Page
    x:Class="EnergyPerformance.Views.MonitorDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vms="using:EnergyPerformance.ViewModels"
    xmlns:helpers="using:EnergyPerformance.Helpers"
    mc:Ignorable="d">

    <Page.DataContext>
        <vms:MonitorDetailViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Adjust the height as needed -->
            <RowDefinition Height="*"/>
            <!-- Adjust the height as needed -->
        </Grid.RowDefinitions>

        <lvc:CartesianChart Series="{Binding Series}" Grid.Row="1" MaxHeight="400" />
        <!-- Adjust MaxHeight as needed -->

        <lvc:CartesianChart
            Series="{Binding SeriesHour}"
            XAxes="{Binding XAxes}"
            LegendPosition="Right"
            Grid.Row="0"
             />
        <!-- Adjust Margin as needed -->
    </Grid>

</Page>
