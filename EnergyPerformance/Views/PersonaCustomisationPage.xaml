<Page
    x:Class="EnergyPerformance.Views.PersonaCustomisationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=viewmodels:PersonaCustomisationViewModel}"
    xmlns:viewmodels="using:EnergyPerformance.ViewModels"
    xmlns:helpers="using:EnergyPerformance.Helpers"
    xmlns:local1="using:EnergyPerformance.Models"
    mc:Ignorable="d">
    <Page.Resources>
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical" Margin="0, 10, 0, 10">
                <TextBlock FontSize="20" Text="">
                                        <Run x:Uid="CustomisePersonaLabel"/>
                </TextBlock>
                <ComboBox x:Name="AppSelection" Height="44" Width="300" ItemsSource="{x:Bind ViewModel.Applications}" PlaceholderText="Select Application" Margin="0, 10, 0, 0">
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Slider></Slider>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>